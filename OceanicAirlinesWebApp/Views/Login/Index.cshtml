@model OceanicAirlinesWebApp.Models.LoginModel  
@{  
    ViewBag.Title = "Index";  
}  
<script type="text/javascript" defer>     
    console.log(document.cookie)
    if(!document.cookie==""){
        window.location.href = '/Home';
    }
    function display() {
        console.log($("#txtusername").val())
        console.log($("#txtuserpassword").val())

        if ($("#txtusername").val() == "Mr Ambassador" && $("#txtuserpassword").val() == "noTaxPlz") {
            alert("Welcome, Mr Ambassador");
            document.cookie = "username="+$("#txtusername").val();
            window.location.href = '/Home';
            return false;
        } else {
            alert("You are not, Mr Ambassador - you can't fly with us");
            return false;
        }
        return true;
    }</script>  


<h3>Oceanic Airlines Parcel Delivery Service </h3>
<h4> Sign in </h4>
@using (Html.BeginForm("Index", "Home"))  
{  
<table width="40%" cellpadding="1" cellspacing="5">  
<tr>  
<td colspan="2" style="color:#f00;font-size:larger">@ViewBag.Status</td>  
</tr>  
    <tr>  
         <td align="right">User Name :</td>  
         <td>@Html.TextBoxFor(m => m.UserName, new {@style="width:200px; background-color:#4AB0E0; border-radius:5px",@id="txtusername" })</td>  
    </tr>  
    <tr>  
 <td align="right">User Password :</td>  
         <td>@Html.PasswordFor(m => m.Password, new {@style="width:200px; background-color:#4AB0E0; border-radius:5px",@id="txtuserpassword" })</td>  
    </tr>  
    <tr>  
        <td colspan="2">  
          <input type="button" value="Login" style="background-color:#000000; color:#4AB0E0; border-radius:5px" title="login" onclick=" display();"/>  
        </td>  
    </tr>  
 </table>  
} 